# ===================================
# Network Configuration
# ===================================
SEPOLIA_URL=https://sepolia.infura.io/v3/YOUR-INFURA-PROJECT-ID
MAINNET_URL=https://mainnet.infura.io/v3/YOUR-INFURA-PROJECT-ID

# ===================================
# Wallet Configuration
# ===================================
# Private Key (without 0x prefix)
# WARNING: Never commit actual private keys!
PRIVATE_KEY=your-private-key-here

# Mnemonic (alternative to private key)
# MNEMONIC=your twelve word mnemonic phrase here

# ===================================
# API Keys
# ===================================
# Etherscan API Key for Contract Verification
ETHERSCAN_API_KEY=your-etherscan-api-key

# Coinmarketcap API for gas reporter (optional)
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key

# ===================================
# Gas Configuration
# ===================================
# Enable gas reporting
REPORT_GAS=false

# Gas price (in gwei) - leave empty for auto
GAS_PRICE=

# Gas limit - leave empty for auto
GAS_LIMIT=

# ===================================
# Contract Configuration
# ===================================
# Contract Address (after deployment)
CONTRACT_ADDRESS=

# Contract Owner Address
OWNER_ADDRESS=

# ===================================
# Security Configuration
# ===================================
# Enable security features
ENABLE_PAUSABLE=true

# Pauser addresses (comma-separated)
PAUSER_ADDRESSES=

# Emergency contact address
EMERGENCY_CONTACT=

# ===================================
# Performance Configuration
# ===================================
# Solidity Optimizer
OPTIMIZER_ENABLED=true
OPTIMIZER_RUNS=200

# Compilation settings
EVM_VERSION=paris

# ===================================
# Testing Configuration
# ===================================
# Test timeout (milliseconds)
TEST_TIMEOUT=100000

# Enable coverage
COVERAGE=false

# ===================================
# CI/CD Configuration
# ===================================
# Codecov token
CODECOV_TOKEN=

# Skip husky hooks in CI
HUSKY=0

# ===================================
# Development Configuration
# ===================================
# Enable debug mode
DEBUG=false

# Network for local development
LOCAL_NETWORK_PORT=8545

# ===================================
# Monitoring Configuration
# ===================================
# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# Log level (error, warn, info, debug)
LOG_LEVEL=info
